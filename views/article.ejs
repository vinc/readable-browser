<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title><%= title %></title>
  </head>
  <body class="flex-center <%= options.join(' ') %>">
    <nav class="navbar cloak">
      <div class="navbar-toggler btn" aria-label="menu">
        <span class="hamburger-outer">
          <span class="hamburger-inner"></span>
        </span>
      </div>
      <div class="navbar-content flex-center">
        <form action="/article">
          <input name="url" type="url" placeholder="URL to browse" value="<%= url %>">
        </form>
      </div>
    </nav>

    <article>
      <h1><%= title %></h1>

      <%- content %>
    </article>

    <%- include('partials/footer') %>
  </body>
</html>
